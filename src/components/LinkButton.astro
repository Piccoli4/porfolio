---
const { href } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    class="
        inline-flex 
        bg-gray-100 
        text-gray-800 
        border-gray-300 
        items-center 
        justify-center 
        gap-2 
        px-2 
        py-1 
        lg:px-3 
        lg:py-2 
        space-x-2 
        text-base 
        transition 
        text-white 
        bg-red-600 
        border 
        dark:border-gray-600 
        focus-visible:ring-blue-500/80 
        text-md 
        hover:bg-red-800 
        hover:border-gray-900 
        group 
        max-w-fit 
        rounded-xl 
        hover:text-white 
        hover:scale-110 
        focus:outline-none 
        focus-visible:outline-none 
        focus-visible:ring 
        focus-visible:ring-white 
        focus-visible:ring-offset-2 
        active:bg-black
    "
>
    <slot />
</a>

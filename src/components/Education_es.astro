            description: "Practical bank reconciliation course, focused on controlling and adjusting differences between a company's accounting records and bank movements. Covers fundamental concepts of checking accounts, bank statements, common and deferred checks, transitory and permanent differences, and application of methodologies to reconcile accounting and bank balances through real exercises with spreadsheets and accounting records.",
            skills: ["Bank Reconciliation", "Accounting", "Bank Statements", "Checking Accounts", "Common and Deferred Checks", "Transitory Differences", "Permanent Differences", "Accounting Records", "Financial Control", "Accounting Adjustments", "Accounting vs Bank Balance", "Practical Exercises", "Excel for Accounting", "Bank Account Management"]
        }
    ];

    // Variables globales
    let currentEducation: EducationItem | null = null;
    let currentSection = 0;
    const cardsPerSection = 4;
    const totalSections = Math.ceil(15 / cardsPerSection); // 15 certificados / 4 = 4 secciones

    // Obtener datos según idioma
    const getCurrentEducationData = (): EducationItem[] => {
        const lang = getCurrentLanguage();
        return lang === 'en' ? EDUCATION_DATA_EN : EDUCATION_DATA_ES;
    };

    // Función para navegación acelerada por secciones
    function navigateToSection(direction: 'left' | 'right'): void {
        const gallery = document.getElementById('education-gallery');
        if (!gallery) return;

        // Calcular nueva sección
        if (direction === 'right') {
            currentSection = (currentSection + 1) % totalSections;
        } else {
            currentSection = currentSection === 0 ? totalSections - 1 : currentSection - 1;
        }

        // Calcular posición objetivo
        const cardWidth = 320; // w-80 = 320px
        const gap = 24; // gap-6 = 24px
        const targetPosition = -(currentSection * cardsPerSection * (cardWidth + gap));

        // Aplicar navegación rápida
        gallery.style.setProperty('--target-position', `${targetPosition}px`);
        gallery.classList.remove('education-scroll');
        gallery.classList.add('fast-navigation');

        // Restaurar animación normal después de la navegación
        setTimeout(() => {
            gallery.classList.remove('fast-navigation');
            gallery.classList.add('education-scroll');
        }, 8000);
    }

    // Variables para navegación en modal
    let currentCertificateIndex = 0;
    let allCertificates: string[] = [];

    // Función para navegar al certificado anterior
    function navigateToPreviousCertificate(): void {
        currentCertificateIndex = currentCertificateIndex > 0 
            ? currentCertificateIndex - 1 
            : allCertificates.length - 1;
        openEducationModal(allCertificates[currentCertificateIndex]);
    }

    // Función para navegar al certificado siguiente
    function navigateToNextCertificate(): void {
        currentCertificateIndex = currentCertificateIndex < allCertificates.length - 1 
            ? currentCertificateIndex + 1 
            : 0;
        openEducationModal(allCertificates[currentCertificateIndex]);
    }

    // Función para abrir modal con datos multiidioma
    function openEducationModal(id: string): void {
        const educationData = getCurrentEducationData();
        currentEducation = educationData.find(item => item.id === id) || null;
        
        if (!currentEducation) return;
        
        const modal = document.getElementById('education-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalImage = document.getElementById('modal-image') as HTMLImageElement | null;
        const modalInstitution = document.getElementById('modal-institution');
        const modalDate = document.getElementById('modal-date');
        const modalStatus = document.getElementById('modal-status');
        const modalDescription = document.getElementById('modal-description');
        const modalSkills = document.getElementById('modal-skills');
        
        if (!modal || !modalTitle || !modalImage || !modalInstitution || !modalDate || !modalStatus || !modalDescription || !modalSkills) {
            console.error('No se pudieron encontrar todos los elementos del modal');
            return;
        }
        
        // Llenar contenido del modal
        modalTitle.textContent = currentEducation.title;
        modalImage.src = currentEducation.image;
        modalImage.alt = `Certificado de ${currentEducation.title}`;
        modalInstitution.textContent = currentEducation.institution;
        modalDate.textContent = currentEducation.date;
        modalDescription.textContent = currentEducation.description;
        
        // Status con color
        modalStatus.innerHTML = `
            <div class="w-3 h-3 bg-emerald-500 rounded-full animate-pulse"></div>
            <span class="text-emerald-700 dark:text-emerald-300 font-medium">${currentEducation.status}</span>
        `;
        
        // Skills con scroll si son muchas
        modalSkills.innerHTML = currentEducation.skills.map((skill: string) => 
            `<span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 text-sm rounded-full font-medium">${skill}</span>`
        ).join('');
        
        // Mostrar modal
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';

        // Actualizar índice y posición
        currentCertificateIndex = allCertificates.indexOf(id);
        const positionElement = document.getElementById('modal-position');
        if (positionElement) {
            positionElement.textContent = `${currentCertificateIndex + 1} / ${allCertificates.length}`;
        }
    }

    // Función para cerrar modal
    function closeEducationModal(): void {
        const modal = document.getElementById('education-modal');
        if (!modal) return;
        
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = 'auto';
        currentEducation = null;
    }

    // Event listeners
    document.addEventListener('DOMContentLoaded', function() {
        // Inicializar array de certificados
        allCertificates = ['tuig', 'desarrollo-web-responsive', 'programacion-web-inicial', 'php-mysql', 'php-mysql-avanzado', 'programacion-javascript', 'desarrollo-web-fullstack', 'react-js', 'desarrollo-apps', 'python-coderhouse', 'python-midudev', 'opcw-cert', 'reparacion-celulares', 'cb-cert'];
        // Duplicar elementos para scroll infinito
        const gallery = document.getElementById('education-gallery');
        if (gallery) {
            const items = Array.from(gallery.children);
            items.forEach(item => {
                const clone = item.cloneNode(true) as HTMLElement;
                const originalOnclick = item.getAttribute('onclick');
                if (originalOnclick) {
                    clone.setAttribute('onclick', originalOnclick);
                }
                gallery.appendChild(clone);
            });
        }
        
        // Cerrar modal con ESC
        document.addEventListener('keydown', (e: KeyboardEvent) => {
            if (e.key === 'Escape') {
                closeEducationModal();
            }
        });
        
        // Cerrar modal clicking fuera
        const modal = document.getElementById('education-modal');
        if (modal) {
            modal.addEventListener('click', (e: MouseEvent) => {
                const target = e.target as HTMLElement | null;
                if (target && target.id === 'education-modal') {
                    closeEducationModal();
                }
            });
        }
        
        // Hacer funciones globales
        (window as any).openEducationModal = openEducationModal;
        (window as any).closeEducationModal = closeEducationModal;
        (window as any).navigateToPreviousCertificate = navigateToPreviousCertificate;
        (window as any).navigateToNextCertificate = navigateToNextCertificate;
    });
</script>
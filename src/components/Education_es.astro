const getStatusColor = (status: string): string => {
    switch (status) {
        case 'Completado':
            return 'bg-emerald-500'
        case 'En Curso':
            return 'bg-blue-500'
        case 'Pausado':
            return 'bg-amber-500'
        default:
            return 'bg-gray-500'
    }
}

<!-- Contenedor principal de la galería -->
<div class="max-w-7xl mx-auto">
    <!-- Header con estadísticas -->
    <div class="text-center mb-12">
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-950/30 dark:to-purple-950/30 rounded-2xl p-6 backdrop-blur-sm border border-indigo-100/50 dark:border-indigo-900/30 max-w-2xl mx-auto">
            <div class="grid grid-cols-3 gap-6 text-center">
                <div class="space-y-2">
                    <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">{EDUCATION.length}</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Certificaciones</div>
                </div>
                <div class="space-y-2">
                    <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">{EDUCATION.filter(item => item.type === 'Título Universitario').length}</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Títulos</div>
                </div>
                <div class="space-y-2">
                    <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">{new Date().getFullYear() - 2017}</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Años de formación</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenedor de galería con animación -->
    <div class="relative overflow-hidden">
        <!-- Container de scroll horizontal con animación continua -->
        <div
            id="education-gallery"
            class="flex gap-6 py-4 education-scroll"
        >
            {
                EDUCATION.map((item, index) => (
                <div
                    class="group relative flex-shrink-0 cursor-pointer transition-all duration-500 hover:-translate-y-2"
                    style={`animation-delay: ${index * 150}ms`}
                    onclick={`openEducationModal('${item.id}')`}
                    data-index={index}
                >
                    <!-- Card de diploma/certificado -->
                    <div class="relative w-80 h-60 bg-white/70 dark:bg-gray-800/70 backdrop-blur-md rounded-2xl border border-gray-200/50 dark:border-gray-700/50 shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden">
                    
                        <!-- Badge de tipo -->
                        <div class="absolute top-3 left-3 z-20">
                            <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium rounded-full backdrop-blur-sm bg-white/90 dark:bg-gray-800/90 text-gray-700 dark:text-gray-300">
                                {item.type}
                            </span>
                        </div>

                        <!-- Badge de estado -->
                        <div class="absolute top-3 right-3 z-20">
                            <div class={`w-3 h-3 rounded-full ${getStatusColor(item.status)} animate-pulse shadow-md`}></div>
                        </div>

                        <!-- Badge de destacado -->
                        {item.featured && (
                            <div class="absolute top-12 left-3 z-20">
                                <div class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-xs font-bold px-2 py-1 rounded-full shadow-md">
                                    ⭐ Principal
                                </div>
                            </div>
                        )}

                        <!-- Imagen del diploma/certificado real -->
                        <div class="relative h-full overflow-hidden">
                            <img 
                                src={item.image} 
                                alt={`Certificado de ${item.title}`}
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                loading="lazy"
                            />

                            <!-- Overlay de hover -->
                            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-500 flex items-center justify-center">
                                <div class="opacity-0 group-hover:opacity-100 transition-all duration-500 transform scale-75 group-hover:scale-100">
                                    <div class="bg-white/20 dark:bg-black/20 backdrop-blur-sm rounded-full p-4">
                                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información en la parte inferior -->
                        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent text-white p-4">
                            <h3 class="font-bold text-lg mb-1 line-clamp-2 leading-tight">
                                {item.title}
                            </h3>
                            <p class="text-sm text-white/80 mb-1">{item.institution}</p>
                            <p class="text-xs text-white/60">{item.date}</p>
                        </div>

                        <!-- Efecto de brillo -->
                        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none"></div>
                    </div>
                </div>
                ))
            }
        </div>
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12">
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-950/20 dark:to-purple-950/20 rounded-xl p-6 border border-indigo-100/50 dark:border-indigo-900/20 max-w-2xl mx-auto">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                <span class="font-semibold text-indigo-600 dark:text-indigo-400">Formación continua:</span>
                Mi compromiso con el aprendizaje constante se refleja en estas {EDUCATION.length} certificaciones especializadas en desarrollo web y tecnologías modernas, desde mis inicios en 2017 hasta la actualidad.
            </p>
        </div>
    </div>
</div>


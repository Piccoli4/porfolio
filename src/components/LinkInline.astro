---
const { href } = Astro.props
---

<a 
  href={href} 
  role="link" 
  class="
    group
    inline-flex 
    items-center 
    gap-1
    text-base 
    font-medium 
    bg-gradient-to-r
    from-indigo-600
    to-purple-600
    bg-clip-text
    text-transparent
    hover:from-indigo-700
    hover:to-purple-700
    dark:from-indigo-400
    dark:to-purple-400
    dark:hover:from-indigo-300
    dark:hover:to-purple-300
    transition-all
    duration-300
    hover:gap-2
  "
>
  <slot />
</a>
const getStatusColor = (status: string): string => {
    switch (status) {
        case 'Completed':
            return 'bg-emerald-500'
        case 'In Progress':
            return 'bg-blue-500'
        case 'Paused':
            return 'bg-amber-500'
        default:
            return 'bg-gray-500'
    }
}

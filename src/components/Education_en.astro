<style>
    /* Enhanced continuous scroll animation */
    .education-scroll {
        animation: autoScroll 45s linear infinite;
        width: max-content;
    }

    .education-scroll:hover {
        animation-play-state: paused;
    }

    /* Fast state for quick navigation */
    .education-scroll.fast-navigation {
        animation: fastScroll 8s ease-in-out forwards;
    }

    @keyframes autoScroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes fastScroll {
        to {
            transform: translateX(var(--target-position, -50%));
        }
    }

    /* Entry animations */
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .group {
        animation: slideIn 0.6s ease-out both;
    }

    /* Enhanced hover effect */
    .group:hover {
        transform: translateY(-8px) scale(1.02);
    }

    /* Clamped line for text */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Custom scrollbar for modal skills */
    #modal-skills::-webkit-scrollbar {
        width: 6px;
    }

    #modal-skills::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
    }

    #modal-skills::-webkit-scrollbar-thumb {
        background: rgba(99, 102, 241, 0.5);
        border-radius: 3px;
